<h1>Listing grandslams</h1>

<table class="table table_list_players">
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Country</th>
    <th>City</th>
    <th>Courttype</th>
  </tr>

<% @grandslams.each do |grandslam| %>
  <tr>
    <td><img src = "<%= grandslam.photo %>" alt = "Picture of a happy monkey" class = "player_image_thumb" /></td>
    <td><%= link_to grandslam.name,grandslam %></td>
    <td><%= grandslam.country %></td>
    <td><%= grandslam.city %></td>
    <td><%= grandslam.courttype %></td>
</tr>
<% end %>
</table>

<br />

<%= link_to 'New Grandslam', new_grandslam_path %>
