<h1>Listing players</h1>

<table class="table">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Age</th>
    <th>Nationality</th>
    <th>Yearpro</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= image_tag player.avatar.url(:thumb)%></td>
    <td><%= player.name %></td>
    <td><%= player.age %></td>
    <td><%= player.nationality %></td>
    <td><%= player.yearpro %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td><%= player.points %></td>


    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

